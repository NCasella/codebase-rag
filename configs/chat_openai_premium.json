{
  "name": "chat_openai_premium",
  "description": "Chat con OpenAI - MÃ¡xima calidad (gpt-4o con reranking avanzado)",

  "prompt": {
    "template": "detailed",
    "include_metadata": true,
    "max_context_length": 15000,
    "plot_enabled": false
  },

  "model": {
    "provider": "openai",
    "name": "gpt-4o",
    "temperature": 0.8,
    "max_tokens": null,
    "top_p": 0.95
  },

  "retrieval": {
    "k_documents": 8,
    "include_metadata": true,
    "similarity_threshold": null
  },

  "text_splitting": {
    "parser_threshold": 4
  },

  "embeddings": {
    "model_name": "sentence-transformers/all-mpnet-base-v2",
    "device": "cpu",
    "normalize_embeddings": true
  },

  "rerank": {
    "enabled": true,
    "strategy": "cross_encoder",
    "retrieve_k": 25,
    "top_n": 8,
    "cross_encoder_model": "cross-encoder/ms-marco-MiniLM-L-12-v2",
    "cross_encoder_device": "cpu",
    "mmr_lambda": 0.5
  }
}
