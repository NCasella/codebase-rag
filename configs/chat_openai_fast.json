{
  "name": "chat_openai_fast",
  "description": "Chat con OpenAI - Versión rápida y económica (gpt-3.5-turbo)",

  "prompt": {
    "template": "concise",
    "include_metadata": false,
    "max_context_length": 6000,
    "plot_enabled": false
  },

  "model": {
    "provider": "openai",
    "name": "gpt-3.5-turbo",
    "temperature": 0.5,
    "max_tokens": 800,
    "top_p": 1.0
  },

  "retrieval": {
    "k_documents": 3,
    "include_metadata": false,
    "similarity_threshold": null
  },

  "text_splitting": {
    "parser_threshold": 2
  },

  "embeddings": {
    "model_name": "sentence-transformers/all-MiniLM-L6-v2",
    "device": "cpu",
    "normalize_embeddings": true
  },

  "rerank": {
    "enabled": false,
    "strategy": "none"
  }
}
