{
  "name": "chat_openai",
  "description": "Configuraci√≥n optimizada para modo chat interactivo con OpenAI (mantiene historial conversacional)",

  "prompt": {
    "template": "default",
    "include_metadata": true,
    "max_context_length": 10000,
    "plot_enabled": false
  },

  "model": {
    "provider": "openai",
    "name": "gpt-4o-mini",
    "temperature": 0.7,
    "max_tokens": null,
    "top_p": 1.0
  },

  "retrieval": {
    "k_documents": 5,
    "include_metadata": true,
    "similarity_threshold": null
  },

  "text_splitting": {
    "parser_threshold": 3
  },

  "embeddings": {
    "model_name": "sentence-transformers/all-MiniLM-L6-v2",
    "device": "cpu",
    "normalize_embeddings": true
  },

  "rerank": {
    "enabled": true,
    "strategy": "cross_encoder",
    "retrieve_k": 15,
    "top_n": 5,
    "cross_encoder_model": "cross-encoder/ms-marco-MiniLM-L-12-v2",
    "cross_encoder_device": "cpu",
    "mmr_lambda": 0.5
  }
}
